# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Package.json is managed by yarn, which uses spaces.
[package.json]
indent_style = space

# Markdown and YAML files are better off with spaces.
[*.{md,yml,yaml}]
indent_style = space

